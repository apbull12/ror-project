<h1>Organizations</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Public name</th>
    <th>organization_type</th>
    <th>Pricing policy</th>
    <th>Parent organization</th>
    <th>Group organization</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @organizations.flatten.each do |org| %>
    <tr>
      <td><%= org.name %></td>
      <td><%= org.public_name %></td>
      <td><%= org.organization_type %></td>
      <td><%= org.pricing_policy %></td>
      <td><%= org.parent_org_id %></td>
      <td><%= group_org_name(org.group_organization_id) %></td>
      <td><%= link_to 'Show', org %></td>
      <td><%= link_to 'Edit', edit_organization_path(org) %></td>
      <td><%= link_to 'Destroy', org, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
